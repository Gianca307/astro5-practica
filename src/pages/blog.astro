---
import BlogPost from "../components/BlogPost.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const allPosts = await Astro.glob('../pages/posts/*.md'); // me trae todos los posts que tengo en esa carpeta
const pageTittle = "Blog";
---

<BaseLayout title={pageTittle}>
	<h1 class="text-4xl">Blog</h1>
	
	<h1>{pageTittle}</h1>
	<h2>Mi blog de Astro aprendizaje</h2>
	<p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>
	<ul>
		<!-- <li><a href="/posts/post-1/">Publicación 1</a></li>
		<li><a href="/posts/post-2/">Publicación 2</a></li>
		<li><a href="/posts/post-3/">Publicación 3</a></li> -->
		{allPosts.map((post) => <BlogPost hrefUrl={post.url} title={post.frontmatter.title} />)}
	</ul>
	<script>
			import "../scripts/menu.js";
		</script>
</BaseLayout>