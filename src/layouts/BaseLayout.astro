---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {pageTitle} = Astro.props; //recibe la propiedad pageTitle desde la p√°gina que llama a este layout
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <h1>{pageTitle}</h1>
    <slot /> {/** la etiqueta slot permite insertar contenido hijo escrito entre las etiquetas de apertura y cierre del componente */}
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>